#!/bin/bash

set -e

export PATH="$PWD/bin/dev-tools:$PWD/node_modules/.bin:$PATH"

function remove_node_modules() {
  pushd "$1" > /dev/null
  rm -rf node_modules
  popd > /dev/null
}

if [[ -n "$1" ]]; then
  remove_node_modules "$1"
else
  for package in `ls packages`;do
    if [[ "$package" == 'node_modules' ]]; then
      continue
    fi
    remove_node_modules "packages/$package"
  done
fi
